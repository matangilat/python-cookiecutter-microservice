# Environment variables template
# Copy this to .env and customize

# Application
APP_NAME={{ cookiecutter.project_name }}
DEBUG=false
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

{% if cookiecutter.database_type != 'none' %}
# Database
DB_TYPE={{ cookiecutter.database_type }}
{% if cookiecutter.deploy_database == 'yes' %}
DB_HOST={{ cookiecutter.database_type }}
{% else %}
DB_HOST=localhost
{% endif %}
{% if cookiecutter.database_type == 'postgresql' %}
DB_PORT=5432
{% elif cookiecutter.database_type == 'mysql' %}
DB_PORT=3306
{% elif cookiecutter.database_type == 'mongodb' %}
DB_PORT=27017
{% endif %}
DB_NAME={{ cookiecutter.project_slug }}
DB_USER=admin
DB_PASSWORD=changeme
{% endif %}

{% if cookiecutter.cache_type != 'none' %}
# Cache
CACHE_TYPE={{ cookiecutter.cache_type }}
{% if cookiecutter.deploy_cache == 'yes' %}
CACHE_HOST={{ cookiecutter.cache_type }}
{% else %}
CACHE_HOST=localhost
{% endif %}
{% if cookiecutter.cache_type == 'redis' %}
CACHE_PORT=6379
{% elif cookiecutter.cache_type == 'memcached' %}
CACHE_PORT=11211
{% endif %}
CACHE_PASSWORD=
{% endif %}

{% if cookiecutter.queue_type != 'none' %}
# Queue
QUEUE_TYPE={{ cookiecutter.queue_type }}
{% if cookiecutter.deploy_queue == 'yes' %}
QUEUE_HOST={{ cookiecutter.queue_type }}
{% else %}
QUEUE_HOST=localhost
{% endif %}
{% if cookiecutter.queue_type == 'kafka' %}
QUEUE_PORT=9092
{% elif cookiecutter.queue_type == 'rabbitmq' %}
QUEUE_PORT=5672
{% endif %}
QUEUE_USER=
QUEUE_PASSWORD=
{% endif %}
